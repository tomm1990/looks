doctype html
html(lang='en')
    head
        title Loox
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' type='text/css' href='/css/main.css')
        script.
            function func(span1) {
                const parent = span1.parentNode,
                    p = parent.childNodes[1],
                    span = parent.childNodes[2];
                if (p.clientHeight != 100) {
                    p.style.maxHeight = '100px';
                    span.innerHTML = 'Read More';
                } else {
                    p.style.maxHeight = '1000px';
                    span.innerHTML = 'Read Less';
                }
            }
    body
        -
            const animals = data
            const animal = dog

        .wrapper
            //.header
                p header
            .main
                .content
                    //img(src=animal.img)
                    img(src=d_img)
                    .text
                        h4 #{d_name}
                        p #{d_txt}
                        span(onclick='func(this)') Read More
                ol
                    //each el in animals
                    - for(var i = 0; i < length; i++) {
                    li
                        a(href='/dog/' + animals[i].id)
                            img(src=animals[i].img)
                            h4 #{animals[i].name}
                    - }

            //.footer
                p footer
